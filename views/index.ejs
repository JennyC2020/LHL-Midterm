<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <!-- CSS Stylesheets-->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/menu.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/cart.css" type="text/css" />
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />

  <!-- Scripts -->
  <script type="text/javascript" src="/scripts/menus.js"></script>
  <!--<script type="text/javascript" src="/scripts/cart.js"></script>-->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>



</head>

<body>
  <nav>
    <%- include("./partials/_navbar") %>
  </nav>

  <!--Header-->
  <header>
    <%- include("./partials/_header") %>
  </header>

  <main class="main-container">
    <div class="menu-container">
      <section class="menu-group">
        <h2 class="menu-group-title">Our Menu</h2>

        <ul class="menu-items">
          <% for (const menu_item of menu_items){ %>
          <li class="menu-item">
            <div class="menu-image">
              <img src="<%= menu_item.menu_image_url %>" alt="">
            </div>
            <div class="menu-item-text">
              <h2 class="menu-item-title"><%= menu_item.dish %></h2>
              <p class="menu-item-description"><%= menu_item.description %></p>
            </div>
            <span class="menu-item-price">$<%= menu_item.price %></span>

            <div class="order_button">

              <button id="into-cart" type="submit" class="btn btn-info">Add to cart</button>
            </div>
          </li>
          <% } %>

        </ul>
      </section>

      </section>

    </div>

    <div class="cart-container">
      <div class="cart-header">
        <span class="" style="font-size: 16px;font-weight: 500;color: white">RestO</span><br>
        <span class="" style="font-size: 12px;color: white">7344 Green Drive</span>
        <span class="" style="font-size: 12px;color: white">Vancouver, BC, V8R3T8</span>
      </div>
      <div class="hide-cart">
        <div class="cart-body">
          <ul class="cart-items">
            <li class="cart-item">
              <div class="cart-item-quantity">1</div>
              <h2 class="cart-item-title">XXXXX</h2>
              <div class="cart-item-price">$xx.xx</div>
            </li>
            <li class="cart-item">
              <div class="cart-item-quantity">1</div>
              <h2 class="cart-item-title">XXXXX</h2>
              <div class="cart-item-price">Your cart is empty</div>
            </li>

          </ul>
          <div class="cart-total">
            <div class="cart-total-label"><span class="" style="color: rgba(38,42,52,1);font-size: 17px;">Total</span>
            </div>
            <div class="cart-total-amount"><span class="" style="color: rgba(38,42,52,1);font-size: 17px;">xx.00</span>
            </div>
          </div>
        </div>

        <div class="cart-footer">
          <button id="order-now" type="button" class="btn btn-dark btn-block" type="submit">Order now</button>
        </div>
      </div>
    </div>

  </main>

  </div>

</body>


<footer>
  <%- include("./partials/_footer") %>
</footer>


</html>
